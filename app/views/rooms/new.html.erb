<section class="section">
  <div class="container">

    <article class="panel">
      <div class="panel-heading">
        部屋の登録
      </div>
      
      <div class="card">
        <div class="card-content">
          <div class="media">
            <%= form_for @room do |f| %>

              <div class="select">
                <div class="form-group">
                <label>宿のタイプ</label>
                <%= f.select :home_type, [["ホテル", "ホテル"], ["旅館", "旅館"], ["その他", "その他"]], id: "home_type", prompt: "選択してください", class: "form-control" %>
                </div>
              </div>
              &nbsp;&nbsp;&nbsp;&nbsp;

              <div class="select">
                <div class="form-group">
                <label>部屋のタイプ</label>
                <%= f.select :room_type, [["プライベート", "プライベート"], ["シェア", "シェア"]], id: "room_type", prompt: "選択してください", class: "form-control" %>
                </div>
              </div>
              &nbsp;&nbsp;&nbsp;&nbsp;

              <div class="select">
                <div class="form-group">
                <label>宿泊可能人数</label>
                <%= f.select :accommodate, [["1人", 1], ["2人", 2], ["3人", 3], ["4人以上", 4]], id: "accommodate", prompt: "選択してください", class: "form-control" %>
                </div>
              </div>
              &nbsp;&nbsp;&nbsp;&nbsp;

              <div class="select">
                <div class="form-group">
                <label>ベッドの数</label>
                <%= f.select :bed_room, [["1台", 1], ["2台", 2], ["3台", 3], ["4台以上", 4]], id: "bed_room", prompt: "選択してください", class: "form-control" %>
                </div>
              </div>
              &nbsp;&nbsp;&nbsp;&nbsp;

              <div class="select">
                <div class="form-group">
                <label>部屋数</label>
                <%= f.select :bath_room, [["1部屋", 1], ["2部屋", 2], ["3部屋", 3], ["4部屋以上", 4]], id: "bath_room", prompt: "選択してください", class: "form-control" %>
                </div>
              </div>
              <br/>
              <br/>
              <br/>
              <br/>
              <div><%= f.submit "登録する", class: "button is-primary" %></div>


            <% end %>
          </div>
        </div>
      </div>
    </article>

  </div>
</section>