<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<section class="hero is-medium has-bg-img">
    <div class="hero-body">
        <div class="container">
            <h1 class="title has-text-white">
                素敵なご旅行をあなたに <br>
                どんなお部屋をお探しですか？
            </h1>
            <div class="search-freeword">
                <%= form_tag search_path, method: :get, data: { turbolinks: false} do %>
                    <br/>
                    <br/>
                    <div class="field is-horizontal">
                        <div class="field-body">
                            <div class="control has-icons-left">
                                <span class="icon is-small is-left">
                                    <i class="fa fa-search"></i>
                                </span>
                                <%= text_field_tag :search, params[:search], placeholder: "フリーワード検索", class: "input" %>
                            </div>
                            
                            <%= submit_tag "検索", class: "button is-primary" %>
                        </div>
                    </div>
                <% end %>
            </div>
            <div class="search-destination">
                <%= form_tag search_path, method: :get, data: { turbolinks: false} do %>
                    <br/>
                    <br/>
                    <div class="field is-horizontal">
                        <div class="field-body">
                            <div class="control has-icons-left">
                                <span class="icon is-small is-left">
                                    <i class="fa fa-search"></i>
                                </span>
                                <%= text_field_tag :search, params[:search], placeholder: "目的地を入力", class: "input" %>
                            </div>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <div class="field">
                                <p class="control is-expanded has-icons-left">
                                    <%= text_field_tag :start_date, params[:start_date], placeholder: "チェックイン", readonly: true, class: "input is-primary is-rounded" %>
                                    <span class="icon is-small is-left">
                                    <i class="far fa-calendar-alt"></i>
                                    </span>
                                </p>
                            </div>
                        
                            <div class="field">
                                <p class="control is-expanded has-icons-left has-icons-right">
                                    <%= text_field_tag :end_date, params[:end_date], placeholder: "チェックアウト", readonly: true, class: "input is-primary is-rounded" %>
                                    <span class="icon is-small is-left">
                                    <i class="far fa-calendar-alt"></i>
                                    </span>
                                </p>
                            </div>
                            <%= submit_tag "検索", class: "button is-primary" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>

  <div class="container">
        <div class="panel-area">
            <h1 class="section-title">おすすめのエリア</h1>
            <div class="row">
                <div class="panel-item col-lg-3 col-6">
                    <span>東京</span>
                    <a href="/"><img class="panel-image" src="/assets/img_tokyo.jpg" /></a>
                    <div class="shadow"></div>
                </div>
                <div class="panel-item col-lg-3 col-6">
                    <span>大阪</span>
                    <a href="/"><img class="panel-image" src="/assets/img_osaka.jpg" /></a>
                    <div class="shadow"></div>
                </div>
                <div class="panel-item col-lg-3 col-6">
                    <span>京都</span>
                    <a href="/"><img class="panel-image" src="/assets/img_kyoto.jpg" /></a>
                    <div class="shadow"></div>
                </div>
                <div class="panel-item col-lg-3 col-6">
                    <span>兵庫</span>
                    <a href="/"><img class="panel-image" src="/assets/img_kobe.jpg" /></a>
                    <div class="shadow"></div>
                </div>
            </div>
        </div>
    </div>

<script>
  $('#start_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected) {
      $('#end_date').datepicker("option", "minDate", selected);
      $('#end_date').attr("disabled", false);
    }
  });
  $('#end_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected) {
      $('#start_date').datepicker("option", "maxDate", selected);
    }
  });
</script>
